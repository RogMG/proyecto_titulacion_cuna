<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:backgroundTint="#FF0000"
    android:textAlignment="center"
    tools:context=".viewpager.Consejo1">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/warningsign" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Consejo Principal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_app_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Busque signos de respiración"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para verificar la respiración, fíjese si se le mueve el pecho. También puede colocar la oreja sobre su boca para escuchar y sentir si hay respiración. Si su bebé está inconsciente y no respira, llame de inmediato al 911. Si hay alguien más con usted, pídale a esa persona que haga la llamada."
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practica RCP en tu bebe"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Compresiones torácicas"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Para iniciar la RCP, acueste a su bebé sobre una superficie firme y plana. Colóquele dos dedos sobre el esternón, justo debajo de la línea imaginaria que une los dos pezones. Realice 30 compresiones torácicas rápidas, aplicando la presión suficiente para que el pecho se le hunda entre 3 y 4 centímetros. Esto hará que la sangre le fluya hacia el cerebro y otros órganos vitales."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="rcp"
                    app:srcCompat="@mipmap/rcp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Respiración"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Después de las primeras 30 compresiones torácicas, coloque la palma de la mano sobre la frente de su bebé. Colóquele dos dedos bajo la barbilla e inclínele suavemente la cabeza hacia atrás. Esto le abrirá las vías respiratorias."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/breathe" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView189"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Inicie la respiración artificial"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Cúbrale la nariz y la boca con su boca formando un sello hermético (que no escape el aire), y exhale lentamente dos veces. Si el pecho de su bebé no se eleva, vuelva a acomodarle la cabeza, tápele mejor la nariz y la boca con su boca, y vuelva a intentarlo."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/breathein" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView1894"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Repítalo"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Repita cada dos minutos este ciclo de 30 compresiones y dos respiraciones, hasta que llegue la ambulancia o su bebé comience a respirar de nuevo."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/rcp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView18943"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Posición lateral de seguridad"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView698"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Después de una RCP, es normal que el bebé vomite y tenga dificultades para respirar. Simplemente colóquelo en la posición lateral de seguridad, con el rostro vuelto ligeramente hacia abajo. Asegúrese de que nada le bloquee ni le tape la boca y la nariz. La posición lateral de seguridad ayudará a mantener abiertas las vías respiratorias del bebé."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/position" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>